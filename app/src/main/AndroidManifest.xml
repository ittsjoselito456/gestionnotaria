        android:theme="@style/AppTheme"> <!-- Aplicar el tema definido -->

        <activity
            android:name=".actividades.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".actividades.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".actividades.ReservaCitaActivity"
            android:exported="false" />

        <activity
            android:name=".actividades.NotarioActivity"
            android:exported="false" />

        <activity
            android:name=".actividades.ClienteActivity"
            android:exported="false" />

        <activity
            android:name=".actividades.ModificarCitaActivity"
            android:exported="false" />

        <activity android:name=".actividades.EliminarCitaActivity"
            android:exported="false" />

        <activity android:name=".actividades.ConsultarCitasActivity"
            android:exported="false" />

        <activity android:name=".actividades.AgregarDespachoActivity"
            android:exported="false" />

        <activity android:name=".actividades.EliminarDespachoActivity"
            android:exported="false" />

        <activity android:name=".actividades.ConsultarCitasClienteActivity"
